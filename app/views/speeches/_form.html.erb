
<p style="color: green"><%= notice %></p>
<style>
    .input_width {
        width: 100%;
    }
</style>
<div data-controller="context-menu" class="container mt-5">
  <div class="card card-default">
    <div class="card-body">
      <%= simple_form_for(@item) do |f| %>

        <div class="row  col-xl-12">
          <div class="bg-content flex-1 col-xl-12"  style="margin-right: 24px; ">
            <div class="title">
              <div style="display: flex; justifyContent: 'space-between'">
                ADICIONAR PALESTRA
              </div>
            </div>
            <hr class="d-print-none">

            <div class="row">
              <div class="col-xl-12">
                <%= f.input :name,as: :string,label: "Tema", wrapper_html: {} ,  input_html:{class: "input_width"},prompt: true , required: true %>
              </div>

              <div class="col-xl-12">
                <%= f.input :duration,as: :integer,label: "Duração (min)", wrapper_html: {} , input_html:{class: "input_width"},prompt: true , required: true %>
              </div>
            </div>

            <hr class="d-print-none">
            <div class="col-xl-12">
              <div class="clearfix">
                <div class="float-right" >
                  <%= link_to 'Voltar', speeches_path, class: 'btn btn-secondary' %>

                  <%= f.submit 'Adicionar', class: 'btn btn-primary' %>
                </div>

              </div>
            </div>
          </div>
        </div>

      <% end %>

    </div>
  </div>

</div>



